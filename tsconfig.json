{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "baseUrl": "src/",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": false,
    "target": "es5",
    "lib": ["es2015", "dom"],
    "outDir": "./dist/built"
  },
  "include": ["src", "defs.d.ts"]
}
